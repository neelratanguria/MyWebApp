@model MyWebApp.Models.Item
@{
    ViewData["Title"] = "QR Code";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
            background-color: white;
        }
        .qr-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
        }
        .qr-code {
            margin: 20px 0;
        }
        .qr-code img {
            max-width: 300px;
            height: auto;
        }
        .print-button {
            margin: 10px 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
        }
        .print-button:hover {
            background-color: #0056b3;
        }
        .download-button {
            margin: 10px 10px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
        }
        .download-button:hover {
            background-color: #218838;
        }
        @@media print {
            .print-button, .download-button {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="qr-container">
        <div class="qr-code">
            <img src="@ViewBag.QrCodeUrl" alt="QR Code" />
        </div>
        
        <button class="print-button" onclick="window.print()">Print QR Code</button>
        <a href="@ViewBag.QrCodeUrl" download="QRCode.png" class="download-button">Download QR Code</a>
    </div>
</body>
</html>
