@model List<MyWebApp.Models.Item>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Your Personalized WebApp!</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">hello world</a></p>
</div>

<div class="mt-4">
    <form asp-action="AddItem" method="post">
        <input type="text" name="title" placeholder="Title" required />
        <input type="text" name="description" placeholder="Description" required />
        <input type="url" name="forwardToUrl" placeholder="Forward To URL" required />
        <select name="locationId" class="form-control" required>
            <option value="">-- Select Location --</option>
            @if (ViewBag.Locations != null)
            {
                @foreach (SelectListItem location in ViewBag.Locations)
                {
                    <option value="@location.Value">@location.Text</option>
                }
            }
        </select>
        <button type="submit">Add Short URL</button>
    </form>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="mt-4">
        <h3>Shortened URLs</h3>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <strong>@item.Title</strong> - @item.Description<br />
                    <a href="/@item.Id" target="_blank">@item.Id</a> → <a href="@item.ForwardToUrl" target="_blank">@item.ForwardToUrl</a><br />
                    Created on: @item.CreatedDateTime.ToString("g")<br />
                    @if (item.Location != null)
                    {
                        <span>Location: @item.Location.LocationName</span><br />
                    }
                    <a href="@Url.Action("QrCodePage", "Home", new { id = item.Id })" target="_blank">[Print QR Code]</a>
                </li>
            }
        </ul>
    </div>
}