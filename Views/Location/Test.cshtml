@{
    ViewData["Title"] = "Database Connection Test";
}

<h2>Database Connection Test</h2>

<div class="card">
    <div class="card-header">
        <h4>Connection Status</h4>
    </div>
    <div class="card-body">
        <p><strong>Connection Status:</strong> @ViewBag.ConnectionStatus</p>
        <p><strong>Location Count:</strong> @ViewBag.LocationCount</p>
        
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <strong>Error:</strong> @ViewBag.Error
            </div>
        }
        
        @if (ViewBag.Locations != null && ViewBag.LocationCount > 0)
        {
            <h5>Found Locations:</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Code ID</th>
                        <th>Description</th>
                        <th>Type ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var location in ViewBag.Locations)
                    {
                        <tr>
                            <td>@location.CodeId</td>
                            <td>@location.CodeDescription</td>
                            <td>@location.TypeId</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <strong>No locations found in T_CODE_MASTER table.</strong>
                <p>Please run the SQL insert statements to populate the table with sample data.</p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Back to Locations</a>
</div>
