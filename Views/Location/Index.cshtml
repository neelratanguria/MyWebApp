@model IEnumerable<MyWebApp.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<h2>Locations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Code ID</th>
            <th>Description</th>
            <th>Type ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CodeId</td>
                <td>@item.CodeDescription</td>
                <td>@item.TypeId</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No locations found.</p>
}
